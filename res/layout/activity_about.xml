<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity" 
    android:background="#fff">
    
    <ImageView 
        android:id="@+id/tv_about_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/aboutlogo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>"

    <TextView
        android:id="@+id/tv_about_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二维码通讯录" 
        android:textSize="30dp"
        android:textColor="#333"
        android:layout_below="@+id/tv_about_logo"
        android:layout_marginTop="20dp"
         android:layout_centerHorizontal="true"/>
    <TextView 
        android:id="@+id/tv_about_show2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本：V1.3"
        android:textSize="15dp"
        android:textColor="#333"
        android:layout_below="@+id/tv_about_show1"
        android:layout_marginTop="20dp"
         android:layout_centerHorizontal="true"/>
    <Button 
        android:id="@+id/bt_about_update"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="检查更新"
        android:textSize="25dp"
        android:textColor="#fff"
       android:layout_below="@+id/tv_about_show2"
        android:layout_marginTop="20dp" 
        android:background="@drawable/update"
         android:layout_centerHorizontal="true"/>
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软件开发工程师LEW  版权所有"
        android:textSize="15dp"
        android:typeface="sans"
        android:textColor="#333"/>
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright(©)2013-2014"
        android:textSize="10dp"
        android:textColor="#555"/>
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="China FZU.SE Lew-studio"
        android:textSize="10dp"
        android:textColor="#555"/>
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rights Reserved"
        android:textSize="10dp"
        android:textColor="#555"/>
    </LinearLayout>
    

</RelativeLayout>
